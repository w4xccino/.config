set number
set mouse=a
set numberwidth=1

set clipboard=unnamed
syntax enable
set showcmd
set ruler
set cursorline
set encoding=utf-8
set sw=2

set relativenumber
set laststatus=2
set noshowmode 

call plug#begin('~/.local/share/nvim/plugged')
Plug 'sonph/onehalf', { 'rtp': 'vim' }

call plug#end()

syntax on
set t_Co=256
set cursorline
colorscheme gruvbox
" lightline
" let g:lightline = { 'colorscheme': 'onehalfdark' }

